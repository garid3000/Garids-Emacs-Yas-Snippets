# -*- mode: snippet -*-
# name: prev_H_hat
# key: H
# type: command
# --
(backward-sexp) (kill-sexp) (backward-word)
(if (= (preceding-char) ?\\ )
	(progn (message "yes") (kill-word 1)
		   (backward-delete-char 1) (insert "\\hat{\\")
		   (yank 1) (yank 2) (insert "}"))
(progn (message "no") (forward-word)
       (insert "\\hat{") (yank) (insert "}"))
)