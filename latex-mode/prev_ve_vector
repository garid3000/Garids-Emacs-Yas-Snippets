# -*- mode: snippet -*-
# name: prev_ve_vector
# key: ve
# type: command
# --
(backward-sexp) (kill-sexp)
(if (looking-back "[a-zA-Z]" 0)
	(progn
	(backward-word)
	(if (= (preceding-char) ?\\ )
		(progn (message "yes") (kill-word 1)
			(backward-delete-char 1) (insert "\\vec{\\")
			(yank 1) (yank 2) (insert "}"))
		(progn (message "no") (forward-word)
		(insert "\\vec{") (yank) (insert "}")))
		)
	(progn (message "no")
     	;(forward-word)
       (insert "\\vec{") (yank) (insert "}"))
)